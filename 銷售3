    <div id="toast" class="toast"></div>

    <script type="module">
        // 核心欄位定義
        const CORE_FIELDS = {
            buyerId: "買方統一編號",
            invoiceStatus: "發票狀態",
            formatCode: "格式代號",
            taxableAmount: "應稅銷售額",
            tax: "營業稅",
            total: "總計"
        };
        
        // 應用程式狀態
        let rawData = [];
        let fileHeaders = [];
        let columnMapping = {};

        // DOM 元素
        const fileUploader = document.getElementById('file-uploader');
        const processButton = document.getElementById('process-button');
        const resultsArea = document.getElementById('results-area');
        
        // Modal DOM
        const modal = document.getElementById('mapping-modal');
        const modalClose = document.getElementById('modal-close');
        const modalCancel = document.getElementById('modal-cancel');
        const modalConfirm = document.getElementById('modal-confirm');
        const detectedFieldsList = document.getElementById('detected-fields-list');

        // Toast DOM
        const toast = document.getElementById('toast');
        let toastTimer;

        function showToast(message, type = 'success') {
            clearTimeout(toastTimer);
            toast.textContent = message;
            toast.className = `toast ${type} show`;
            toastTimer = setTimeout(() => {
                toast.className = 'toast';
            }, 3000);
        }

        function formatCurrency(num) {
            if (isNaN(num)) return "0.00";
            return num.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        }

        function ensureXLSXLoaded() {
            if (typeof XLSX === 'undefined') {
                showToast("錯誤：XLSX 解析庫 (SheetJS) 未被正確加載。", "error");
                showToast("請確認同資料夾有 xlsx.full.min.js，並已在 <head> 加入 <script src=\"./xlsx.full.min.js\"></script>。", "error");
                return false;
            }
            return true;
        }

        // 處理檔案上傳
        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (!file) {
                return;
            }

            if (!ensureXLSXLoaded()) {
                fileUploader.value = "";
                return;
            }

            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const sheetName = workbook.SheetNames[0];
                    const worksheet = workbook.Sheets[sheetName];
                    
                    // 第一版是把工作表轉成陣列
                    rawData = XLSX.utils.sheet_to_json(worksheet, { header: 1, defval: "", raw: false });

                    if (rawData.length < 2) {
                        showToast("錯誤：檔案為空或沒有資料。", "error");
                        return;
                    }

                    // 第 1 列當抬頭
                    fileHeaders = rawData[0];
                    // 剩下的是資料列
                    rawData.shift();

                    // 將資料列轉成物件
                    rawData = rawData.map(row => {
                        let obj = {};
                        fileHeaders.forEach((header, index) => {
                            obj[header] = row[index];
                        });
                        return obj;
                    });

                    if (!fileHeaders || fileHeaders.length === 0) {
                        showToast("錯誤：無法讀取檔案抬頭。", "error");
                        return;
                    }

                    processButton.disabled = false;
                    processButton.textContent = "步驟 2：對應欄位並計算";
                    showToast("檔案讀取成功！", "success");

                    // 預先填充模態框
                    populateMappingModal();

                } catch (err) {
                    showToast(`檔案解析失敗：${err.message}`, "error");
                    processButton.disabled = true;
                    processButton.textContent = "請先上傳檔案";
                }
            };

            reader.onerror = () => {
                showToast("檔案讀取失敗。", "error");
            };

            reader.readAsArrayBuffer(file);
        }

        // 填充欄位對應
        function populateMappingModal() {
            detectedFieldsList.innerHTML = fileHeaders.map(h => `<code>${h}</code>`).join(' ');

            const selects = {
                buyerId: document.getElementById('map-buyerId'),
                invoiceStatus: document.getElementById('map-invoiceStatus'),
                formatCode: document.getElementById('map-formatCode'),
                taxableAmount: document.getElementById('map-taxableAmount'),
                tax: document.getElementById('map-tax'),
                total: document.getElementById('map-total'),
            };

            const placeholder = '<option value="">-- 請選擇 --</option>';
            const options = fileHeaders.map(h => `<option value="${h}">${h}</option>`).join('');

            for (const key in selects) {
                selects[key].innerHTML = placeholder + options;

                // 嘗試自動對應
                const coreName = CORE_FIELDS[key];
                const foundHeader = fileHeaders.find(h =>
                    h.replace(/[\s()（）]/g, '') === coreName.replace(/[\s()（）]/g, '')
                );
                if (foundHeader) {
                    selects[key].value = foundHeader;
                }
            }
        }

        function showMappingModal() {
            modal.classList.add('show');
        }

        function hideMappingModal() {
            modal.classList.remove('show');
        }

        // 驗證並儲存欄位對應
        function validateAndSaveMapping() {
            columnMapping = {};
            let isValid = true;
            let selectedValues = new Set();
            
            for (const key in CORE_FIELDS) {
                const select = document.getElementById(`map-${key}`);
                const value = select.value;
                
                if (!value) {
                    isValid = false;
                }

                columnMapping[key] = value;
                selectedValues.add(value);
            }

            if (!isValid) {
                showToast("錯誤：請完成所有 6 個核心欄位的對應。", "error");
                return false;
            }
            
            return true;
        }

        // 執行計算
        function handleCalculation() {
            if (!validateAndSaveMapping()) {
                return;
            }
            
            hideMappingModal();
            showToast("開始計算...", "success");

            // 初始化加總
            const totals = {
                eightDigit: { taxable: 0, tax: 0, total: 0, count: 0 },
                nonEightDigit: { taxable: 0, tax: 0, total: 0, count: 0 },
                code33: { taxable: 0, tax: 0, total: 0, count: 0 },
                void: { taxable: 0, tax: 0, total: 0, count: 0 }
            };

            const details = {
                eightDigit: [],
                nonEightDigit: [],
                code33: [],
                void: []
            };

            try {
                for (const row of rawData) {
                    const status = row[columnMapping.invoiceStatus];
                    const formatCode = String(row[columnMapping.formatCode]);
                    const buyerId = String(row[columnMapping.buyerId] || '').trim();
                    
                    const taxable = parseFloat(row[columnMapping.taxableAmount] || 0);
                    const tax = parseFloat(row[columnMapping.tax] || 0);
                    const total = parseFloat(row[columnMapping.total] || 0);

                    // 排除作廢
                    if (status === "作廢已確認") {
                        totals.void.taxable += taxable;
                        totals.void.tax += tax;
                        totals.void.total += total;
                        totals.void.count++;
                        details.void.push({ ...row, original: { taxable, tax, total } });
                        continue;
                    }

                    // 格式代號 33 → 減項
                    if (formatCode === "33") {
                        totals.code33.taxable += taxable;
                        totals.code33.tax += tax;
                        totals.code33.total += total;
                        totals.code33.count++;
                        details.code33.push({ ...row, original: { taxable, tax, total } });
                        continue;
                    }

                    // 統編 8 位數
                    if (buyerId.length === 8 && /^\d{8}$/.test(buyerId)) {
                        totals.eightDigit.taxable += taxable;
                        totals.eightDigit.tax += tax;
                        totals.eightDigit.total += total;
                        totals.eightDigit.count++;
                        // ✅ 修正：原本是 { .row, ... } 這裡要用展開
                        details.eightDigit.push({ ...row, original: { taxable, tax, total } });
                    } else {
                        // 統編非 8 位數要用 1.05 還原
                        const calculatedUntaxed = taxable / 1.05;
                        const calculatedTax = taxable - calculatedUntaxed;
                        const calculatedTotal = taxable;

                        totals.nonEightDigit.taxable += calculatedUntaxed;
                        totals.nonEightDigit.tax += calculatedTax;
                        totals.nonEightDigit.total += calculatedTotal;
                        totals.nonEightDigit.count++;

                        // ✅ 修正：這裡也把 .row 改成 ...row
                        details.nonEightDigit.push({
                            ...row,
                            original: { taxable, tax, total },
                            calculated: { taxable: calculatedUntaxed, tax: calculatedTax, total: calculatedTotal }
                        });
                    }
                }
            } catch (err) {
                showToast(`計算失敗：${err.message}。請檢查檔案內容和欄位對應。`, "error");
                return;
            }

            // 最終總和（扣掉 33）
            const finalTaxable = totals.eightDigit.taxable + totals.nonEightDigit.taxable - totals.code33.taxable;
            const finalTax = totals.eightDigit.tax + totals.nonEightDigit.tax - totals.code33.tax;
            const finalTotal = totals.eightDigit.total + totals.nonEightDigit.total - totals.code33.total;

            const finalTotals = { taxable: finalTaxable, tax: finalTax, total: finalTotal };

            renderResults(totals, details, finalTotals);
        }

        // 輸出結果
        function renderResults(totals, details, finalTotals) {
            document.getElementById('final-taxable').textContent = formatCurrency(finalTotals.taxable);
            document.getElementById('final-tax').textContent = formatCurrency(finalTotals.tax);
            document.getElementById('final-total').textContent = formatCurrency(finalTotals.total);

            const headers = [
                columnMapping.buyerId,
                columnMapping.invoiceStatus,
                columnMapping.formatCode,
                columnMapping.taxableAmount,
                columnMapping.tax,
                columnMapping.total
            ];

            // 8 位
            document.getElementById('table-8digit').innerHTML = createDetailTable(
                headers,
                details.eightDigit,
                totals.eightDigit,
                false
            );

            // 非 8 位
            document.getElementById('table-non-8digit').innerHTML = createDetailTable(
                headers,
                details.nonEightDigit,
                totals.nonEightDigit,
                true
            );

            // 33
            document.getElementById('table-code33').innerHTML = createDetailTable(
                headers,
                details.code33,
                totals.code33,
                false
            );

            // 作廢
            document.getElementById('table-void').innerHTML = createDetailTable(
                headers,
                details.void,
                totals.void,
                false
            );

            // 更新小標題
            document.querySelector('#details-8digit summary').textContent =
                `買方統編 8 位數加總 (${totals.eightDigit.count} 筆)`;
            document.querySelector('#details-non-8digit summary').textContent =
                `買方統編非 8 位數加總 (${totals.nonEightDigit.count} 筆)`;
            document.querySelector('#details-code33 summary').textContent =
                `格式代號 33 加總 (${totals.code33.count} 筆)`;
            document.querySelector('#details-void summary').textContent =
                `作廢已確認 (${totals.void.count} 筆)`;

            resultsArea.style.display = 'block';
            resultsArea.scrollIntoView({ behavior: 'smooth' });
        }

        // 建表
        function createDetailTable(headers, dataRows, totalData, useCalculated) {
            let currentHeaders = [...headers];
            let html = '<thead><tr>';

            if (useCalculated) {
                currentHeaders[3] = `[計算後] 未稅銷售額`;
                currentHeaders[4] = `[計算後] 營業稅`;
                currentHeaders[5] = `[計算後] 總計`;
            }

            html += currentHeaders.map(h => `<th>${h}</th>`).join('');
            html += '</tr></thead><tbody>';

            if (dataRows.length === 0) {
                html += `<tr><td colspan="${headers.length}" style="text-align: center; color: var(--color-text-muted);">無資料</td></tr>`;
            }

            for (const row of dataRows) {
                html += '<tr>';
                html += `<td>${row[columnMapping.buyerId] || ''}</td>`;
                html += `<td>${row[columnMapping.invoiceStatus] || ''}</td>`;
                html += `<td>${row[columnMapping.formatCode] || ''}</td>`;

                if (useCalculated) {
                    html += `<td class="num">${formatCurrency(row.calculated.taxable)}</td>`;
                    html += `<td class="num">${formatCurrency(row.calculated.tax)}</td>`;
                    html += `<td class="num">${formatCurrency(row.calculated.total)}</td>`;
                } else {
                    html += `<td class="num">${formatCurrency(row.original.taxable)}</td>`;
                    html += `<td class="num">${formatCurrency(row.original.tax)}</td>`;
                    html += `<td class="num">${formatCurrency(row.original.total)}</td>`;
                }
                html += '</tr>';
            }

            // 總計行
            html += '</tbody><tfoot><tr class="total-row">';
            html += `<td colspan="3"><strong>總計 (${totalData.count} 筆)</strong></td>`;
            html += `<td class="num">${formatCurrency(totalData.taxable)}</td>`;
            html += `<td class="num">${formatCurrency(totalData.tax)}</td>`;
            html += `<td class="num">${formatCurrency(totalData.total)}</td>`;
            html += '</tr></tfoot>';

            return html;
        }

        // 事件
        fileUploader.addEventListener('change', handleFileUpload);
        processButton.addEventListener('click', showMappingModal);
        modalClose.addEventListener('click', hideMappingModal);
        modalCancel.addEventListener('click', hideMappingModal);
        modalConfirm.addEventListener('click', handleCalculation);

        // 初始化時先看外部 xlsx 有沒有載到
        if (!ensureXLSXLoaded()) {
            // 沒載到就不逼它，但先提醒
        } else {
            showToast("系統就緒，請上傳 XLSX 檔案。", "success");
        }
    </script>
</body>
</html>