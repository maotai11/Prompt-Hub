      /* 動效 */
      --easing-emphasized: cubic-bezier(0.33, 1, 0.68, 1);
      --dur-stagger: 300ms;
      --dur-breathe-min: 600ms;
      --dur-breathe-max: 1000ms;
    }

    /* =============================================================================
