    }

    @keyframes sweep {
      to { transform: translateX(100%); }
    }

    .hero-content {
      text-align: center;
      max-width: 800px;
      z-index: 2;
      padding: 0 24px;
    }

    .hero-title {
      font-family: "Playfair Display", "Didot", serif;
      font-size: var(--fs-display);
      line-height: var(--lh-display);
      margin-bottom: 24px;
      opacity: 0;
    }

