    <script src="./xlsx.full.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- 1. DOM 元素 ---
            const dom = {
                header: document.getElementById('site-header'),
                heroTitle: document.getElementById('hero-title'),
                dropzone: document.getElementById('dropzone'),
                fileInput: document.getElementById('file-input'),
                fileName: document.getElementById('file-name'),
                statusMessage: document.getElementById('status-message'),
                resultsContainer: document.getElementById('results-container'),
                currentYear: document.getElementById('current-year'),
                // Mapping Modal
                mappingModal: document.getElementById('mapping-modal'),
                mapId: document.getElementById('map-id'),
                mapTaxable: document.getElementById('map-taxable'),
                mapTax: document.getElementById('map-tax'),
                mapConfirm: document.getElementById('map-confirm'),
                mapCancel: document.getElementById('map-cancel'),
                // 新增: 新的 mapping select
                mapFormatCode: document.getElementById('map-formatCode'),
                mapStatus: document.getElementById('map-status'),
                // Warning Modal
                warningModal: document.getElementById('warning-modal'),
                warnConfirm: document.getElementById('warn-confirm'),
                warnCancel: document.getElementById('warn-cancel'),
            };

            // --- 2. 應用程式狀態 ---
            const state = {
                workbookData: null,
                headers: [],
                jsonData: [],
                // 修改: 增加新欄位
                mappedFields: { id: null, taxable: null, tax: null, formatCode: null, status: null },
                isWarningConfirmed: false,
                // 修改: 增加新欄位的預設名稱
                defaultFields: {
                    id: '買方統一編號',
                    taxable: '應稅銷售額',
                    tax: '營業稅',
                    formatCode: '格式代號',
                    status: '發票狀態'
                }
            };

            // --- 3. 初始化 ---
            const init = () => {
                // 頁尾年份
                dom.currentYear.textContent = new Date().getFullYear();
                
                // Hero 標題動效 (Speckit)
                staggerHeroText();
                
                // 標頭滾動動效 (Speckit)
                window.addEventListener('scroll', handleHeaderScroll);
                
                // 拖放事件
                setupDragDrop();
                
                // 點選事件
                setupClickListeners();
            };

            // --- 4. 動效 (Speckit) ---
            
            // Hero 字母延遲
            const staggerHeroText = () => {
                const text = dom.heroTitle.textContent;
                dom.heroTitle.innerHTML = '';
                text.split('').forEach((char, index) => {
                    const span = document.createElement('span');
                    span.className = 'char';
                    span.textContent = char;
                    span.style.animationDelay = `${index * 40}ms`; // 總延遲約 0.3s+
                    dom.heroTitle.appendChild(span);
                });
            };

            // Header 滾動
            const handleHeaderScroll = () => {
                if (window.scrollY > 48) {
                    dom.header.classList.add('is-scrolled');
                } else {
                    dom.header.classList.remove('is-scrolled');
                }
            };

            // --- 5. 事件監聽 ---
            
            const setupDragDrop = () => {
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    dom.dropzone.addEventListener(eventName, preventDefaults, false);
                });
                
                ['dragenter', 'dragover'].forEach(eventName => {
                    dom.dropzone.addEventListener(eventName, () => dom.dropzone.classList.add('is-hovering'), false);
                });
                
                ['dragleave', 'drop'].forEach(eventName => {
                    dom.dropzone.addEventListener(eventName, () => dom.dropzone.classList.remove('is-hovering'), false);
                });
                
                dom.dropzone.addEventListener('drop', handleFileDrop, false);
                dom.fileInput.addEventListener('change', handleFileSelect, false);
            };

            const setupClickListeners = () => {
                // Mapping Modal
                dom.mapConfirm.addEventListener('click', handleMapConfirm);
                dom.mapCancel.addEventListener('click', hideMappingModal);
                
                // Warning Modal
                dom.warnConfirm.addEventListener('click', handleWarnConfirm);
                dom.warnCancel.addEventListener('click', handleWarnCancel);
            };

            // --- 6. 檔案處理 (修改為批次) ---

            const preventDefaults = (e) => {
                e.preventDefault();
                e.stopPropagation();
            };

            const handleFileDrop = (e) => {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    processMultipleFiles(files); // 修改
                }
            };
            
            const handleFileSelect = (e) => {
                const files = e.target.files;
                if (files.length > 0) {
                    processMultipleFiles(files); // 修改
                }
            };

            // 新增: 讀取單一檔案並返回 Promise
            const readAndParseFile = (file) => {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        try {
                            const data = e.target.result;
                            const workbook = XLSX.read(data, { type: 'array' });
                            const firstSheetName = workbook.SheetNames[0];
                            const worksheet = workbook.Sheets[firstSheetName];
                            
                            const dataAsArray = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                            
                            if (dataAsArray.length < 2) {
                                // 檔案為空，但不是一個錯誤，只是沒有資料
                                resolve({ headers: [], jsonData: [], fileName: file.name });
                                return;
                            }
                            
                            const headers = dataAsArray[0].map(String);
                            const jsonData = dataAsArray.slice(1);
                            resolve({ headers, jsonData, fileName: file.name });

                        } catch (err) {
                            console.error(`Error processing file ${file.name}:`, err);
                            reject(new Error(`檔案 ${file.name} 處理失敗：${err.message}`));
                        }
                    };
                    reader.onerror = () => {
                        reject(new Error(`讀取檔案 ${file.name} 時發生錯誤。`));
                    };
                    reader.readAsArrayBuffer(file);
                });
            };

            // 新增: 處理多個檔案的
            const processMultipleFiles = (files) => {
                resetUI();
                dom.fileName.textContent = `${files.length} 個檔案`;
                showStatus('loading', `正在讀取 ${files.length} 個檔案...`);

                const fileReadPromises = Array.from(files).map(readAndParseFile);

                Promise.all(fileReadPromises)
                    .then(allFileData => {
                        // 過濾掉沒有資料的檔案
                        const validFilesData = allFileData.filter(d => d.headers.length > 0 && d.jsonData.length > 0);

                        if (validFilesData.length === 0) {
                            showStatus('error', '錯誤：所有檔案均為空或沒有資料列。');
                            return;
                        }

                        // 檢查標頭一致性 (使用第一個有效檔案作為基準)
                        const firstHeaders = validFilesData[0].headers;
                        const firstHeaderString = JSON.stringify(firstHeaders);

                        for (let i = 1; i < validFilesData.length; i++) {
                            const currentHeaderString = JSON.stringify(validFilesData[i].headers);
                            if (currentHeaderString !== firstHeaderString) {
                                showStatus('error', `錯誤：檔案 ${validFilesData[i].fileName} 的欄位與第一個檔案不一致。請確保所有檔案格式相同。`);
                                return;
                            }
                        }

                        // 合併所有檔案的資料
                        state.headers = firstHeaders;
                        state.jsonData = validFilesData.flatMap(d => d.jsonData);
                        
                        if (state.jsonData.length === 0) {
                            showStatus('error', '錯誤：所有檔案合計沒有資料列。');
                            return;
                        }

                        showStatus('loading', `讀取完畢，共 ${state.jsonData.length} 筆資料。正在準備分析...`);
                        autoMapHeaders();

                    })
                    .catch(err => {
                        console.error(err);
                        showStatus('error', err.message);
                    });
            };
            
            // --- 7. 欄位對應邏輯 ---

            const autoMapHeaders = () => {
                // 修改: 尋找所有五個欄位
                const foundFields = {
                    id: state.headers.find(h => h === state.defaultFields.id),
                    taxable: state.headers.find(h => h === state.defaultFields.taxable),
                    tax: state.headers.find(h => h === state.defaultFields.tax),
                    formatCode: state.headers.find(h => h === state.defaultFields.formatCode),
                    status: state.headers.find(h => h === state.defaultFields.status)
                };

                // 修改: 檢查所有五個欄位
                if (foundFields.id && foundFields.taxable && foundFields.tax && foundFields.formatCode && foundFields.status) {
                    // 情境 A: 全部找到
                    state.mappedFields = foundFields;
                    state.isWarningConfirmed = true; // 自動對應 = 無需警告
                    runAnalysis();
                } else {
                    // 情境 B: 有缺，顯示對應 Modal
                    showMappingModal();
                }
            };

            const showMappingModal = () => {
                // 修改: 填充所有五個下拉選單
                const allSelects = [dom.mapId, dom.mapTaxable, dom.mapTax, dom.mapFormatCode, dom.mapStatus];
                
                allSelects.forEach(select => {
                    select.innerHTML = ''; // 清空
                    const defaultOption = document.createElement('option');
                    defaultOption.value = '';
                    defaultOption.textContent = '-- 請選擇欄位 --';
                    select.appendChild(defaultOption);
                    
                    state.headers.forEach(header => {
                        const option = document.createElement('option');
                        option.value = header;
                        option.textContent = header;
                        select.appendChild(option);
                    });
                });
                
                // 修改: 嘗試預選所有五個
                dom.mapId.value = state.headers.find(h => h === state.defaultFields.id) || '';
                dom.mapTaxable.value = state.headers.find(h => h === state.defaultFields.taxable) || '';
                dom.mapTax.value = state.headers.find(h => h === state.defaultFields.tax) || '';
                dom.mapFormatCode.value = state.headers.find(h => h === state.defaultFields.formatCode) || '';
                dom.mapStatus.value = state.headers.find(h => h === state.defaultFields.status) || '';

                hideStatus();
                dom.mappingModal.classList.add('is-visible');
            };

            const hideMappingModal = () => {
                dom.mappingModal.classList.remove('is-visible');
                resetUI(); // 如果取消就重置
            };

            const handleMapConfirm = () => {
                // 修改: 獲取所有五個值
                const selectedId = dom.mapId.value;
                const selectedTaxable = dom.mapTaxable.value;
                const selectedTax = dom.mapTax.value;
                const selectedFormatCode = dom.mapFormatCode.value;
                const selectedStatus = dom.mapStatus.value;

                // 修改: 驗證所有五個值
                if (!selectedId || !selectedTaxable || !selectedTax || !selectedFormatCode || !selectedStatus) {
                    showStatus('error', '錯誤：所有欄位都必須指定。');
                    // 在 Modal 內顯示錯誤 (未來可優化)
                    alert('所有欄位都必須指定。');
                    return;
                }

                // 修改: 儲存所有五個值
                state.mappedFields = {
                    id: selectedId,
                    taxable: selectedTaxable,
                    tax: selectedTax,
                    formatCode: selectedFormatCode,
                    status: selectedStatus
                };

                // 修改: 檢查是否使用非預設值 (所有五個)
                const isDefault = (
                    selectedId === state.defaultFields.id &&
                    selectedTaxable === state.defaultFields.taxable &&
                    selectedTax === state.defaultFields.tax &&
                    selectedFormatCode === state.defaultFields.formatCode &&
                    selectedStatus === state.defaultFields.status
                );

                if (isDefault) {
                    state.isWarningConfirmed = true;
                    hideMappingModal();
                    runAnalysis();
                } else if (state.isWarningConfirmed) {
                    // 已確認過警告 (例如：從警告 modal 返回)
                    hideMappingModal();
                    runAnalysis();
                } else {
                    // 顯示警告
                    showWarningModal();
                }
            };

            // --- 8. 警告 Modal 邏輯 ---
            
            const showWarningModal = () => {
                dom.warningModal.classList.add('is-visible');
            };

            const hideWarningModal = () => {
                dom.warningModal.classList.remove('is-visible');
            };

            const handleWarnConfirm = () => {
                state.isWarningConfirmed = true;
                hideWarningModal();
                handleMapConfirm(); // 再次觸發確認 (此時 isWarningConfirmed 為 true)
            };

            const handleWarnCancel = () => {
                hideWarningModal();
                // 停留在 mapping modal
            };

            // --- 9. 核心分析邏輯 ---

            const runAnalysis = () => {
                if (!state.isWarningConfirmed) {
                    showStatus('error', '分析中止。請先確認欄位對應。');
                    return;
                }
                
                showStatus('loading', '正在計算...');
                
                // 修改: 找到所有五個欄位索引
                const indices = {
                    id: state.headers.indexOf(state.mappedFields.id),
                    taxable: state.headers.indexOf(state.mappedFields.taxable),
                    tax: state.headers.indexOf(state.mappedFields.tax),
                    formatCode: state.headers.indexOf(state.mappedFields.formatCode),
                    status: state.headers.indexOf(state.mappedFields.status)
                };

                // 修改: 檢查所有五個索引
                if (indices.id < 0 || indices.taxable < 0 || indices.tax < 0 || indices.formatCode < 0 || indices.status < 0) {
                    showStatus('error', '致命錯誤：找不到欄位索引。');
                    return;
                }
                
                // 規範：ID 為 8 位數字
                const ID_REGEX = /^[0-9]{8}$/;
                
                // 新增: 新規則的常數
                const VOID_STATUS = '作廢已確認';
                const REDUCTION_CODE = '33';

                // 初始化計算器
                let block1_Taxable = 0;
                let block1_Tax = 0;
                let block2_RawTotal = 0;

                // 遍歷資料
                state.jsonData.forEach((row, rowIndex) => {
                    
                    // --- 新增規則 1: 檢查發票狀態 ---
                    const status = String(row[indices.status] || '').trim();
                    if (status === VOID_STATUS) {
                        return; // 忽略此行
                    }

                    // --- 新增規則 2: 檢查格式代號 ---
                    const formatCode = String(row[indices.formatCode] || '').trim();
                    const multiplier = (formatCode === REDUCTION_CODE) ? -1 : 1;
                    
                    // --- 原有邏輯 ---
                    const id = String(row[indices.id] || '').trim();
                    // 確保數值正確轉換，無效值視為 0
                    const taxableAmount = parseFloat(row[indices.taxable]) || 0;
                    
                    if (ID_REGEX.test(id)) {
                        // 區塊 1：標準應稅 (8位數)
                        const taxAmount = parseFloat(row[indices.tax]) || 0;
                        
                        // 修改: 應用 multiplier
                        block1_Taxable += (taxableAmount * multiplier);
                        block1_Tax += (taxAmount * multiplier);
                        
                    } else {
                        // 區塊 2：零稅率/彙總 (非8位數)
                        // 僅累加「應稅銷售額」欄位的值
                        
                        // 修改: 應用 multiplier
                        block2_RawTotal += (taxableAmount * multiplier);
                    }
                });
                
                // --- 計算結果 ---
                
                // 區塊 1
                const block1 = {
                    taxable: block1_Taxable,
                    tax: block1_Tax,
                    total: block1_Taxable + block1_Tax
                };
                
                // 區塊 2 (回推)
                // 檢查 block2_RawTotal 是否為 0，避免 0/1.05 的情況
                const block2_Taxable = (block2_RawTotal === 0) ? 0 : (block2_RawTotal / 1.05);
                const block2_Tax = (block2_RawTotal === 0) ? 0 : (block2_RawTotal - block2_Taxable);
                const block2 = {
                    taxable: block2_Taxable,
                    tax: block2_Tax,
                    total: block2_RawTotal
                };
                
                // 區塊 3 (總計)
                const block3 = {
                    taxable: block1.taxable + block2.taxable,
                    tax: block1.tax + block2.tax,
                    total: block1.total + block2.total
                };
                
                // 模擬處理時間 (增加呼吸感)
                setTimeout(() => {
                    hideStatus();
                    displayResults(block1, block2, block3);
                }, 500);
            };

            // --- 10. UI 顯示 ---

            const resetUI = () => {
                dom.fileName.textContent = '';
                hideStatus();
                dom.resultsContainer.innerHTML = '';
                dom.resultsContainer.classList.remove('is-visible');
                state.isWarningConfirmed = false;
                state.workbookData = null;
                state.headers = [];
                state.jsonData = [];
                dom.fileInput.value = ''; // 允許重新上傳同名檔案
            };
            
            const showStatus = (type, message) => {
                dom.statusMessage.className = `status-message is-${type}`;
                dom.statusMessage.textContent = message;
            };

            const hideStatus = () => {
                dom.statusMessage.className = 'status-message';
                dom.statusMessage.textContent = '';
            };

            const displayResults = (b1, b2, b3) => {
                // 格式化數字 (Speckit: 增加可讀性)
                const formatNum = (num) => num.toLocaleString('en-US', { 
                    minimumFractionDigits: 0, 
                    maximumFractionDigits: 0 
                });
                // 對於稅金和回推，可能需要小數點
                const formatDecimal = (num) => num.toLocaleString('en-US', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });

                dom.resultsContainer.innerHTML = `
                    <div class="results-grid">
                        <div class="result-card">
                            <h2>區塊 1 (標準 8 碼)</h2>
                            <div class="result-item">
                                <span>應稅銷售額</span>
                                <span class="result-value">$${formatNum(b1.taxable)}</span>
                            </div>
                            <div class="result-item">
                                <span>營業稅</span>
                                <span class="result-value">$${formatNum(b1.tax)}</span>
                            </div>
                            <div class="result-item is-total">
                                <span>總計</span>
                                <span class="result-value">$${formatNum(b1.total)}</span>
                            </div>
                        </div>
                        
                        <div class="result-card">
                            <h2>區塊 2 (非 8 碼/彙總)</h2>
                            <div class="result-item">
                                <span>應稅銷售額 (回推)</span>
                                <span class="result-value">$${formatDecimal(b2.taxable)}</span>
                            </div>
                            <div class="result-item">
                                <span>營業稅 (回推)</span>
                                <span class="result-value">$${formatDecimal(b2.tax)}</span>
                            </div>
                            <div class="result-item is-total">
                                <span>總計 (原始累加)</span>
                                <span class="result-value">$${formatNum(b2.total)}</span>
                            </div>
                        </div>
                        
                        <div class="result-card card-total">
                            <h2>區塊 3 (最終總計)</h2>
                            <div class="result-item">
                                <span>總應稅銷售額</span>
                                <span class="result-value">$${formatDecimal(b3.taxable)}</span>
                            </div>
                            <div class="result-item">
                                <span>總營業稅</span>
                                <span class="result-value">$${formatDecimal(b3.tax)}</span>
                            </div>
                            <div class="result-item is-total">
                                <span>總計</span>
                                <span class="result-value">$${formatDecimal(b3.total)}</span>
                            </div>
                        </div>
                    </div>
                `;
                
                // (Speckit) 呼吸感進場
                // 使用 requestAnimationFrame 確保 DOM 渲染後再加 class
                requestAnimationFrame(() => {
                    dom.resultsContainer.classList.add('is-visible');
                });
            };

            // --- 啟動 ---
            init();

        });
    </script>
</body>
</html>
