    <script>
        // è³‡æ–™ç®¡ç†é¡åˆ¥
        class DataManager {
            constructor() {
                this.notes = this.loadData('notes') || [];
                this.workRecords = this.loadData('workRecords') || [];
            }

            loadData(key) {
                try {
                    const data = localStorage.getItem(key);
                    return data ? JSON.parse(data) : null;
                } catch (error) {
                    console.error(`è¼‰å…¥è³‡æ–™éŒ¯èª¤: ${key}`, error);
                    return null;
                }
            }

            saveData(key, data) {
                try {
                    localStorage.setItem(key, JSON.stringify(data));
                } catch (error) {
                    console.error(`å„²å­˜è³‡æ–™éŒ¯èª¤: ${key}`, error);
                }
            }

            addNote(note) {
                const newNote = {
                    id: Date.now(),
                    ...note,
                    createdAt: new Date().toISOString()
                };
                this.notes.push(newNote);
                this.saveData('notes', this.notes);
                return newNote;
            }

            addWorkRecord(record) {
                const newRecord = {
                    id: Date.now(),
                    ...record,
                    createdAt: new Date().toISOString()
                };
                this.workRecords.push(newRecord);
                this.saveData('workRecords', this.workRecords);
                return newRecord;
            }

            updateItem(type, id, updatedData) {
                if (type === 'note') {
                    const index = this.notes.findIndex(n => n.id === id);
                    if (index !== -1) {
                        this.notes[index] = { ...this.notes[index], ...updatedData };
                        this.saveData('notes', this.notes);
                    }
                } else if (type === 'work') {
                    const index = this.workRecords.findIndex(w => w.id === id);
                    if (index !== -1) {
                        this.workRecords[index] = { ...this.workRecords[index], ...updatedData };
                        this.saveData('workRecords', this.workRecords);
                    }
                }
            }

            deleteItem(type, id) {
                if (type === 'note') {
                    this.notes = this.notes.filter(n => n.id !== id);
                    this.saveData('notes', this.notes);
                } else if (type === 'work') {
                    this.workRecords = this.workRecords.filter(w => w.id !== id);
                    this.saveData('workRecords', this.workRecords);
                }
            }

            getNotes(searchTerm = '') {
                if (!searchTerm) return this.notes;
                return this.notes.filter(note => 
                    note.content.toLowerCase().includes(searchTerm.toLowerCase()) ||
                    note.category.toLowerCase().includes(searchTerm.toLowerCase())
                );
            }

            getWorkRecords(searchTerm = '') {
                if (!searchTerm) return this.workRecords;
                return this.workRecords.filter(record => 
                    record.content.toLowerCase().includes(searchTerm.toLowerCase())
                );
            }

            exportData(type) {
                const data = type === 'notes' ? this.notes : this.workRecords;
                const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `${type}-${new Date().toISOString().split('T')[0]}.json`;
                a.click();
                URL.revokeObjectURL(url);
            }

            importData(type, data) {
                if (Array.isArray(data)) {
                    if (type === 'notes') {
                        this.notes = [...this.notes, ...data];
                        this.saveData('notes', this.notes);
                    } else if (type === 'work') {
                        this.workRecords = [...this.workRecords, ...data];
                        this.saveData('workRecords', this.workRecords);
                    }
                    return true;
                }
                return false;
            }
        }

        // UI ç®¡ç†é¡åˆ¥
        class UIManager {
            constructor(dataManager) {
                this.dataManager = dataManager;
                this.editingNoteId = null;
                this.editingWorkId = null;
                this.currentEditType = null;
                this.currentEditId = null;
                this.desktopCards = this.loadDesktopCards();
            }

            init() {
                this.setupEventListeners();
                this.updateDate();
                this.renderNotes();
                this.renderWorkRecords();
                this.renderDesktopCards();
            }

            setupEventListeners() {
                // ä¸»é¡Œåˆ‡æ›
                document.getElementById('themeToggle').addEventListener('click', () => this.toggleTheme());

                // Tab åˆ‡æ›
                document.querySelectorAll('.tab').forEach(tab => {
                    tab.addEventListener('click', (e) => this.switchTab(e.target.dataset.tab));
                });

                // ç­†è¨˜åŠŸèƒ½
                document.getElementById('addNote').addEventListener('click', () => this.handleNoteSave());
                document.getElementById('noteDate').value = new Date().toISOString().split('T')[0];
                document.getElementById('exportNotes').addEventListener('click', () => this.dataManager.exportData('notes'));
                document.getElementById('importNotes').addEventListener('click', () => document.getElementById('importNotesFile').click());
                document.getElementById('importNotesFile').addEventListener('change', (e) => this.handleImport('notes', e));
                document.getElementById('noteSearch').addEventListener('input', (e) => this.renderNotes(e.target.value));

                // å·¥ä½œç´€éŒ„åŠŸèƒ½
                document.getElementById('addWork').addEventListener('click', () => this.handleWorkSave());
                document.getElementById('workDate').value = new Date().toISOString().split('T')[0];
                document.getElementById('exportWork').addEventListener('click', () => this.dataManager.exportData('work'));
                document.getElementById('importWork').addEventListener('click', () => document.getElementById('importWorkFile').click());
                document.getElementById('importWorkFile').addEventListener('change', (e) => this.handleImport('work', e));
                document.getElementById('workSearch').addEventListener('input', (e) => this.renderWorkRecords(e.target.value));

                // æ¨¡æ…‹æ¡†
                document.getElementById('modalClose').addEventListener('click', () => this.closeModal());
                document.getElementById('saveEdit').addEventListener('click', () => this.saveEdit());
                document.getElementById('editModal').addEventListener('click', (e) => {
                    if (e.target.id === 'editModal') this.closeModal();
                });
            }

            updateDate() {
                const date = new Date();
                const options = { year: 'numeric', month: 'long', day: 'numeric', weekday: 'long' };
                document.getElementById('currentDate').textContent = date.toLocaleDateString('zh-TW', options);
            }

            switchTab(tabName) {
                document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
                document.querySelectorAll('.content-section').forEach(section => section.classList.remove('active'));
                
                document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
                document.getElementById(tabName).classList.add('active');
            }

            toggleTheme() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                document.documentElement.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                
                const themeText = newTheme === 'dark' ? 'â˜€ï¸ æ·ºè‰²æ¨¡å¼' : 'ğŸŒ™ æ·±è‰²æ¨¡å¼';
                document.getElementById('themeToggle').textContent = themeText;
            }

            handleNoteSave() {
                const category = document.getElementById('noteCategory').value.trim();
                const content = document.getElementById('noteContent').value.trim();
                const date = document.getElementById('noteDate').value;

                if (!category || !content) {
                    this.showNotification('è«‹å¡«å¯«é¡åˆ¥å’Œå…§å®¹', 'error');
                    return;
                }

                if (this.editingNoteId) {
                    this.dataManager.updateItem('note', this.editingNoteId, { category, content, date });
                    this.showNotification('ç­†è¨˜æ›´æ–°æˆåŠŸï¼', 'success');
                    this.editingNoteId = null;
                    document.getElementById('addNote').textContent = 'ğŸ’¾ å„²å­˜ç­†è¨˜';
                } else {
                    const newNote = this.dataManager.addNote({ category, content, date });
                    this.addDesktopCard(newNote, 'note');
                    this.showNotification('ç­†è¨˜å„²å­˜æˆåŠŸï¼', 'success');
                }

                // æ¸…ç©ºè¡¨å–®
                document.getElementById('noteCategory').value = '';
                document.getElementById('noteContent').value = '';
                document.getElementById('noteDate').value = new Date().toISOString().split('T')[0];

                this.renderNotes();
                this.saveDesktopCards();
            }

            handleWorkSave() {
                const content = document.getElementById('workContent').value.trim();
                const date = document.getElementById('workDate').value;

                if (!content) {
                    this.showNotification('è«‹å¡«å¯«å·¥ä½œå…§å®¹', 'error');
                    return;
                }

                if (this.editingWorkId) {
                    this.dataManager.updateItem('work', this.editingWorkId, { content, date });
                    this.showNotification('å·¥ä½œç´€éŒ„æ›´æ–°æˆåŠŸï¼', 'success');
                    this.editingWorkId = null;
                    document.getElementById('addWork').textContent = 'ğŸ’¾ å„²å­˜å·¥ä½œç´€éŒ„';
                } else {
                    const newRecord = this.dataManager.addWorkRecord({ content, date });
                    this.addDesktopCard(newRecord, 'work');
                    this.showNotification('å·¥ä½œç´€éŒ„å„²å­˜æˆåŠŸï¼', 'success');
                }

                // æ¸…ç©ºè¡¨å–®
                document.getElementById('workContent').value = '';
                document.getElementById('workDate').value = new Date().toISOString().split('T')[0];

                this.renderWorkRecords();
                this.saveDesktopCards();
            }

            handleImport(type, event) {
                const file = event.target.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = (e) => {
                    try {
                        const data = JSON.parse(e.target.value);
                        if (Array.isArray(data)) {
                            this.dataManager.importData(type, data);
                            this.showNotification(`æˆåŠŸåŒ¯å…¥ ${data.length} é …${type === 'notes' ? 'ç­†è¨˜' : 'å·¥ä½œç´€éŒ„'}ï¼`, 'success');
                            if (type === 'notes') {
                                this.renderNotes();
                            } else {
                                this.renderWorkRecords();
                            }
                        } else {
                            this.showNotification('æª”æ¡ˆæ ¼å¼éŒ¯èª¤', 'error');
                        }
                    } catch (error) {
                        this.showNotification('åŒ¯å…¥å¤±æ•—ï¼šæª”æ¡ˆæ ¼å¼éŒ¯èª¤', 'error');
                    }
                };
                reader.readAsText(file);
                event.target.value = '';
            }

            renderNotes(searchTerm = '') {
                const container = document.getElementById('notesList');
                const notes = this.dataManager.getNotes(searchTerm);

                if (notes.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 20px;">æš«ç„¡ç­†è¨˜</p>';
                    return;
                }

                container.innerHTML = notes.map(note => `
                    <div class="note-card" onclick="uiManager.editNote(${note.id})">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div style="flex: 1;">
                                <div class="note-date">${note.date}</div>
                                <span class="note-category">${note.category}</span>
                                <p style="margin-top: 10px; white-space: pre-wrap;">${this.truncateText(note.content, 200)}</p>
                            </div>
                            <div style="display: flex; gap: 10px; margin-left: 20px;">
                                <button class="btn" onclick="event.stopPropagation(); uiManager.editNote(${note.id})" 
                                        style="padding: 8px 16px; font-size: 0.9rem;">âœï¸ ç·¨è¼¯</button>
                                <button class="btn btn-secondary" onclick="event.stopPropagation(); uiManager.deleteNote(${note.id})" 
                                        style="padding: 8px 16px; font-size: 0.9rem;">ğŸ—‘ï¸ åˆªé™¤</button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            renderWorkRecords(searchTerm = '') {
                const container = document.getElementById('workList');
                const records = this.dataManager.getWorkRecords(searchTerm);

                if (records.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 20px;">æš«ç„¡å·¥ä½œç´€éŒ„</p>';
                    return;
                }

                container.innerHTML = records.map(record => `
                    <div class="note-card" onclick="uiManager.editWork(${record.id})">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div style="flex: 1;">
                                <div class="note-date">${record.date}</div>
                                <p style="margin-top: 10px; white-space: pre-wrap;">${this.truncateText(record.content, 200)}</p>
                            </div>
                            <div style="display: flex; gap: 10px; margin-left: 20px;">
                                <button class="btn" onclick="event.stopPropagation(); uiManager.editWork(${record.id})" 
                                        style="padding: 8px 16px; font-size: 0.9rem;">âœï¸ ç·¨è¼¯</button>
                                <button class="btn btn-secondary" onclick="event.stopPropagation(); uiManager.deleteWork(${record.id})" 
                                        style="padding: 8px 16px; font-size: 0.9rem;">ğŸ—‘ï¸ åˆªé™¤</button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            editNote(id) {
                const note = this.dataManager.notes.find(n => n.id === id);
                if (!note) return;

                this.editingNoteId = id;
                document.getElementById('noteCategory').value = note.category;
                document.getElementById('noteContent').value = note.content;
                document.getElementById('noteDate').value = note.date;
                document.getElementById('addNote').textContent = 'ğŸ”„ æ›´æ–°ç­†è¨˜';

                this.switchTab('notes');
                document.getElementById('noteCategory').scrollIntoView({ behavior: 'smooth' });
            }

            editWork(id) {
                const record = this.dataManager.workRecords.find(w => w.id === id);
                if (!record) return;

                this.editingWorkId = id;
                document.getElementById('workContent').value = record.content;
                document.getElementById('workDate').value = record.date;
                document.getElementById('addWork').textContent = 'ğŸ”„ æ›´æ–°å·¥ä½œç´€éŒ„';

                this.switchTab('work');
                document.getElementById('workContent').scrollIntoView({ behavior: 'smooth' });
            }

            deleteNote(id) {
                if (confirm('ç¢ºå®šè¦åˆªé™¤é€™å‰‡ç­†è¨˜å—ï¼Ÿ')) {
                    this.dataManager.deleteItem('note', id);
                    this.renderNotes();
                    this.removeDesktopCard(id, 'note');
                    this.showNotification('ç­†è¨˜å·²åˆªé™¤ï¼', 'success');
                }
            }

            deleteWork(id) {
                if (confirm('ç¢ºå®šè¦åˆªé™¤é€™ç­†å·¥ä½œç´€éŒ„å—ï¼Ÿ')) {
                    this.dataManager.deleteItem('work', id);
                    this.renderWorkRecords();
                    this.removeDesktopCard(id, 'work');
                    this.showNotification('å·¥ä½œç´€éŒ„å·²åˆªé™¤ï¼', 'success');
                }
            }

            addDesktopCard(item, type) {
                const card = {
                    id: item.id,
                    type: type,
                    date: item.date,
                    content: item.content,
                    category: item.category || ''
                };

                this.desktopCards.push(card);
                this.renderDesktopCard(card);
                this.saveDesktopCards();
            }

            renderDesktopCard(card) {
                const container = document.getElementById('desktopCards');
                const cardElement = document.createElement('div');
                cardElement.className = 'desktop-card';
                cardElement.id = `desktop-card-${card.type}-${card.id}`;

                cardElement.innerHTML = `
                    <button class="close-btn" onclick="uiManager.removeDesktopCard(${card.id}, '${card.type}')">&times;</button>
                    <div class="card-date">${card.date}</div>
                    ${card.category ? `<div class="note-category">${card.category}</div>` : ''}
                    <div class="card-content">${this.truncateText(card.content, 100)}</div>
                `;

                container.appendChild(cardElement);
            }

            removeDesktopCard(id, type) {
                const card = document.getElementById(`desktop-card-${type}-${id}`);
                if (card) {
                    card.remove();
                }

                this.desktopCards = this.desktopCards.filter(card => 
                    !(card.id === id && card.type === type)
                );
                this.saveDesktopCards();
            }

            renderDesktopCards() {
                const container = document.getElementById('desktopCards');
                container.innerHTML = '';
                this.desktopCards.forEach(card => this.renderDesktopCard(card));
            }

            saveDesktopCards() {
                localStorage.setItem('desktopCards', JSON.stringify(this.desktopCards));
            }

            loadDesktopCards() {
                try {
                    const saved = localStorage.getItem('desktopCards');
                    return saved ? JSON.parse(saved) : [];
                } catch (error) {
                    console.error('è¼‰å…¥æ¡Œé¢å¡ç‰‡å¤±æ•—', error);
                    return [];
                }
            }

            truncateText(text, maxLength) {
                if (text.length <= maxLength) return text;
                return text.substring(0, maxLength) + '...';
            }

            showNotification(message, type) {
                const notification = document.createElement('div');
                notification.className = 'notification';
                notification.textContent = message;
                document.body.appendChild(notification);

                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }

            closeModal() {
                document.getElementById('editModal').style.display = 'none';
                this.currentEditId = null;
                this.currentEditType = null;
            }
        }

        // åˆå§‹åŒ–æ‡‰ç”¨
        const dataManager = new DataManager();
        const uiManager = new UIManager(dataManager);

        // é é¢è¼‰å…¥æ™‚åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', () => {
            // è¼‰å…¥ä¸»é¡Œè¨­å®š
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            document.getElementById('themeToggle').textContent = 
                savedTheme === 'dark' ? 'â˜€ï¸ æ·ºè‰²æ¨¡å¼' : 'ğŸŒ™ æ·±è‰²æ¨¡å¼';

            // åˆå§‹åŒ– UI
            uiManager.init();
        });
    </script>
</body>
</html>